  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cadastrar Cliente</h3>
      </div>
      <div class="panel-body">
        <%= form_for @customer, url: manager_customers_url do |f| %>
          <%= f.hidden_field :manager_id, value: f.object.id %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
          </div>
          <div class="form-group">
            <%= f.text_field :account, class: "form-control", placeholder: "Conta" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
          </div>
          <div class="form-group">
            <%= f.select :kind, [['Selecione', nil],['Normal', :normal], ['VIP', :VIP]], {}, class: "form-control", placeholder: "Senha" %>
          </div>
          <div class="actions">
            <%= f.submit "Cadastrar", class: "btn btn-lg btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
