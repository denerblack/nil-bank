<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Acessar seu Nil Bank</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.text_field :account, autofocus: true, class: "form-control", placeholder: "Conta" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
            </div>

            <div class="actions">
              <%= f.submit "Acessar", class: "btn btn-lg btn-success btn-block" %>
            </div>
            <% if notice %>
              <p class="notice"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert"><%= alert %></p>
            <% end %>
          </fieldset>

        <% end %>
      </div>
    </div>
  </div>
</div>


<%#= render "devise/shared/links" %>
